<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.doctort.HomeEnglishActivity">


    <ImageView
        android:id="@+id/backgroundEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/englishdashboardnew" />

    <ImageButton
        android:id="@+id/btnSymptomTamil"
        android:layout_width="176dp"
        android:layout_height="165dp"
        android:background="@color/white"
        android:maxWidth="176dp"
        android:maxHeight="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toEndOf="@+id/btnPredictTamil"
        app:layout_constraintTop_toTopOf="@+id/backgroundEnglish"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/symptom_btn" />

    <ImageButton
        android:id="@+id/btnRemedyTamil"

        android:layout_width="176dp"
        android:layout_height="165dp"
        android:background="@color/white"
        android:maxWidth="176dp"
        android:maxHeight="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnHelpSinhala"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPredictTamil"
        app:layout_constraintVertical_bias="0.225"
        app:srcCompat="@drawable/remedy_btn_english" />

    <ImageButton
        android:id="@+id/btnHelpSinhala"

        android:layout_width="176dp"
        android:layout_height="165dp"
        android:background="@color/white"
        android:maxWidth="176dp"
        android:maxHeight="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSymptomTamil"
        app:layout_constraintVertical_bias="0.22000003"
        app:srcCompat="@drawable/help_btn" />

    <ImageButton
        android:id="@+id/btnPredictTamil"
        android:layout_width="176dp"
        android:layout_height="165dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundEnglish"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/predict_btn1" />

</androidx.constraintlayout.widget.ConstraintLayout>